    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        :root {
            --primary-color: black;
            --secondary-color: white;
            --accent-color: grey;
        }
        .material-symbols-outlined {
            font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 48
        }
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        body {
            background-color: rgb(243, 243, 243);
            font-family: Arial, Helvetica, sans-serif;
            background: linear-gradient(to right, skyblue,rgb(179, 179, 179));
            height: 100vh;

            overflow: hidden;
        }
        h2 {
            text-align: center;
            margin-block: 20px;
        
        }
        .flex {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
        }
        .tweets-container {
            display: flex;
            flex-direction: column;
            gap: 5px;
            padding-top: 2px;
            height: 80%;

            overflow-y: scroll;
        }
        .tweet-wrapper {
            width: 70%;
            max-width: 450px;
            margin: 0 auto;
            flex-wrap: nowrap;

            transition: 0.3s ease-in-out;
        }
        img.profile-icon {
            width: 45px;
            height: 45px;
            object-fit: cover;
        }
        img.twitter-icon {
            width: 23px;
            height: 23px;
            object-fit: cover;
        }
        .tweet-contents {
            flex-direction: column;
            align-items: start;

            background-color: var(--secondary-color);

            font-size: 1rem;
            gap: 0.7em;
            
            width: 100%;

            padding: 1em 2em;
            margin: 0 auto;
            border-radius: 0.5em;

            box-shadow: 0 0 5px 0px rgba(12, 12, 12, 0.4);
            
        }
        .tweet-wrapper:hover {
            transform: scale(1.05);
        }
        .tweet-header {
            width: 100%;
            justify-content: space-between;
        }
        .profile-info {
            gap: 0.5em;
        }
        .tweet-timing {
            gap: 0.25em;
        }
        p.username {
            font-weight: bold;
        }
        p:not(.tweet) {
            font-size: 0.8em;
            color: var(--accent-color);
        }
        .tweet-btns {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .img-btn {
            width: 25px;
            height: 25px;
            object-fit: cover;
            border-radius: 50%;
            box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.642);
        }
        .btn {
            background-color: transparent;
            border: none;
            margin-left: 5px;
        }
        .btn > i {
            font-size: 20px;
            color: black; 
        }
        .btn:hover > i {
            color: red;
        }
        .btn:hover{
            cursor: pointer;
        }


    </style>
</head>
<body>
    <h2>All Tweets</h2>
    <section class="tweets-container">
        <% for(let comment of comments) { %>
            <div class="tweet-wrapper flex">
                <div class="tweet-contents flex">
                    <div class="tweet-header flex">
                        <div class="profile-info flex">
                            <img src="./assets/<%= comment.image %>" alt="" class="profile-icon">
                            <h3 class="user"><%= comment.user %></h3>
                            <p class="username"><%= comment.username %></p>
                        </div>
                        <img src="./assets/twitter.png" alt="" class="twitter-icon">
                    </div>
                    <p class="tweet"><%= comment.comment %></p>
                    <div class="tweet-timing flex">
                        <p class="tweet-time"><%= comment.time %></p>
                        <p>&#183;</p>
                        <p class="tweet-date"><%= comment.date %></p>            
                    </div>
                </div>
                <div class="tweet-btns">
                    <!-- <form action="">
                        <button class="btn primary-btn"><img class="img-btn" src="./assets/pencil.png" alt=""></button>
                    </form> -->
                    <form action="/comments/<%= comment.sn %>?_method=DELETE" method="POST">
                        <button class="btn secondary-btn"><i class='fa fa-trash'></i></button>
                    </form>
                </div>
            </div>
            
        <% } %>
    </section>
</body>

</html>